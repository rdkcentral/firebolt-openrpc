{
    "name": "CPlusPlus",
    "langcode": "cpp",
    "createModuleDirectories": false,
    "extractSubSchemas": true,
    "unwrapResultObjects": false,
    "createPolymorphicMethods": true,
    "excludeDeclarations": true,
    "enumSuffix": ".cpp",
    "overrideRule": true,
    "aggregateFiles": [
        "/include/firebolt.h",
        "/src/firebolt.cpp"
    ],
    "templatesPerModule": [
        "/include/module.h",
        "/src/module_impl.h",
        "/src/module_impl.cpp"
    ],
    "templatesPerSchema": [
        "/include/common/module.h",
        "/src/module_common.cpp",
        "/src/jsondata_module.h"
    ],
    "persistPermission": true,
    "primitives": {
        "boolean": "bool",
        "integer": "int32_t",
        "number": "float",
        "string": "std::string"
    },
    "langVersion" : "c++17",
    "additionalSchemaTemplates": [ "json-types" ],
    "additionalDeclarationTemplates": [ "declarations-override" ]
}
